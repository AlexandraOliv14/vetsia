<h1>Horarios</h1>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Bloque</th>
            <th>Dia</th>
        </tr>
    </thead>
    <tbody>
        <% @horarios.each do |horario| %>
          <tr>
              <td><%= horario.bloque.descripcion %></td>
              <td><%= horario.dia.descripcion %></td>
              <td><%= link_to 'Mostrar', horario_url(horario),class: 'btn btn-success ' %> </td>
              <td><%= link_to 'Editar',horarios_editar_path(horario),class: 'btn btn-warning '  %></td>
              <td><%= link_to'Eliminar',horario_path(horario),class: 'btn btn-danger ' , method: :delete, data: {confirm: 'Esta seguro?'} %></td>
          </tr>
        <% end %>
    </tbody>
</table>
<%= will_paginate @horarios, renderer: BootstrapPagination::Rails %>
